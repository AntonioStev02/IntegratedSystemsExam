@model Domain.Domain_Models.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StudentIndex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentIndex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Embg)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Embg)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



<table class="table">
    <thead>
        <tr>
            <th>
                Course Name
            </th>
            <th>
                Course Code
            </th>
            <th>
                AvailableSlots
            </th>
            <th>SemesterCode</th>
            <th>SemesterName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AllCourses)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.CourseCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Course.AavailableSlots)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.SemesterCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Semester.SemesterName)
                </td>
            </tr>
        }
    </tbody>
</table>
