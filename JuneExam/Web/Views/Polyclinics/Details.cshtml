@model Domain.Domain_Models.Polyclinic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Polyclinic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PolyclinicName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PolyclinicName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PolyclinicAddress)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PolyclinicAddress)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reputation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reputation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AvailableSlots)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AvailableSlots)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Desc
            </th>
            <th>
                DateTaken
            </th>
            <th>
                Name
            </th>
            <th>
              DateOFBirh
            </th>
            <th>CompanyName</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.HealthExaminations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateTaken)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Company.CompanyName)
                </td>

            </tr>
        }
    </tbody>
</table>